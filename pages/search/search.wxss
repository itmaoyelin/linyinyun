/* pages/search/search.wxss */
.search-container{
    padding: 20rpx;
}
.search-header{
    display: flex; 
    align-items: center;
    border: 1px solid #ddd;
    border-radius: 30rpx 0 0 30rpx;
 
}
.header-left{
    display: flex;
    align-items: center;
    height: 60rpx;
    background-color: rgba(237, 237, 237, 0.3);
    /* 可伸缩可拉伸自适应 */
    flex: 1; 
    padding: 0 20rpx;
  
}
.search-input{
    width: 100%;
    height: 100%;
    margin-left: 10rpx;
    font-size: 28rpx;
    
}
.header-right{
    width: 100rpx;
    line-height: 60rpx;
    background-color: #d43c33;
    text-align: center;
    color: #fff;
}
.placeholder{
    /* color:#d43c33 ; */
    /* text-align: center; */
    font-size: 28rpx;
}
.hot{
    display: flex;
    flex-direction: column;   
}
.hot-header{
    margin-top: 20rpx;
    line-height: 60rpx;
    width: 100%;
    border-bottom: 1px solid #efefef;
    font-size: 36rpx;
    color:#d43c33 ;
}
.hot-list{
    display: flex;
    flex-wrap:wrap;
    margin-top: 10rpx;
    /* border: 1px solid #ddd; */

}
.hot-list .hot-item{
    padding: 0 10rpx;
    width: 50%;
    line-height: 60rpx;
    font-size: 28rpx;
    box-sizing: border-box;
}
.hot-icon{
margin-left: 10rpx;
  width: 35rpx;
  height: 20rpx;
}
.weight{
    font-weight: 700;
}
.list-title{
    line-height: 80rpx;
    width: 100%;
    border-bottom: 1px solid #d43c33;
    font-size: 28rpx;
    color: #d43c33;
}
.list-content{
    margin-top: 20rpx;
}
.list-item{
    width: 100%;
    display: flex;
    align-items: center;
    height: 60rpx;
    border-bottom: 1px solid #efefef;
}
.item-name{
    margin-left: 20rpx;
    font-size: 26rpx;
}
.history{
    margin-top: 20rpx;
}
.history-title{
    line-height: 60rpx;
    border-bottom: 1px solid #efefef;
    font-size: 28rpx;
    display: flex;
    justify-content: space-between;
}
.icon-deleted{
    margin-right: 40rpx;
    color: #d43c33;
    font-size: 18px;
}
.history-list{
    display: flex;
    flex-wrap: wrap;
}
.history-item{
    display: block;
    padding: 10rpx;
    line-height: 40rpx;
    text-align: center;
    margin: 10rpx;
    border-radius: 20rpx;
    border: 1px solid #fafafa;
    background-color: #efefef;
    
}
